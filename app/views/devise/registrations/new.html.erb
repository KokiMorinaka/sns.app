<div class="form-container1">
<h2>新規ログイン</h2>

<%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" , class: "form-field" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autocomplete: "email" , class: "form-field" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" , class: "form-field" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-field" %>
  </div>

  <div class="actions">
    <%= f.submit "新規ログイン" , class: "submit-button font-bold" %>
  </div>

  <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
<% end %>
</div>

<%= render "devise/shared/links" %>
