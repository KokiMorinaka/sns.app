<div class="form-container1">
<h1>ログイン</h1>

<%= form_with(url: users_path) do |form| %>

<div class="form-input1">
  <%= form.label :email, "学校用メールアドレス", class: "form-label" %>
  <%= form.email_field :email, class: "form-field" %>
</div>

<div class="form-input1">
  <%= form.label :password, "パスワード", class: "form-label" %>
  <%= form.password_field :password, class: "form-field" %>
</div>

<div class="button-container">
  <%= form.submit "ログイン", class: "submit-button font-bold" %>
<% end %>
</div>
</div>
