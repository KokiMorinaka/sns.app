<h1>投稿編集</h1>

<%= form_with model: @post, url: post_path(@post), class: "form-container" do |form| %>

<div class="form-input">
  <%= form.label :タイトル %> <%= form.text_field :title %>
</div>

<div class="form-input">
  <%= form.label :募集人数 %> <%= form.number_field :recruitment_number %>
</div>

<div class="form-input">
  <%= form.label :期限 %> <%= form.date_select :deadline %> 
</div>

<div class="form-input">
  <%= form.label :詳細 %> <%= form.text_area :content %>
</div>

<div class="button-container">
  <%= form.submit "更新" , class: "link-button"%>
</div>
<% end %>